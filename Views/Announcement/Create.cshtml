@model Kampusum.Models.Event

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Form elements </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Forms</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Form elements</li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Duyuru Ekle</h4>
                        <p class="card-description">Yeni duyuru ekleyin</p>

                        <form asp-action="Create" asp-controller="Announcement" method="post" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="Title">Duyuru Başlığı</label>
                                <input asp-for="Title" class="form-control" placeholder="Başlık" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" placeholder="Açıklama"></textarea>
                            </div>

                            <div class="form-group">
                                <label asp-for="Date">Tarih</label>
                                <input asp-for="Date" class="form-control" type="date" />
                            </div>

                            <div class="form-group">
                                <label asp-for="StartTime">Başlangıç Saati (Opsiyonel)</label>
                                <input asp-for="StartTime" class="form-control" type="time" />
                            </div>

                            <div class="form-group">
                                <label asp-for="EndTime">Bitiş Saati (Opsiyonel)</label>
                                <input asp-for="EndTime" class="form-control" type="time" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Location">Yer (Opsiyonel)</label>
                                <input asp-for="Location" class="form-control" placeholder="Yer" />
                            </div>

                            <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                            <a href="/Announcement/Index" class="btn btn-light">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container-fluid clearfix">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com 2020</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin templates </a> from Bootstrapdash.com</span>
        </div>
    </footer>
</div>